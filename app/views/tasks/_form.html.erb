<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Topic, style: "display: block" %>
    <%= form.text_field :Topic, class:"form-control" %>
  </div>

  <div>
    <%= form.label :Description, style: "display: block" %>
    <%= form.text_field :Description, class:"form-control" %>
  </div>

  <div>
    <%= form.label :StartDate, style: "display: block" %>
    <%= form.date_field :StartDate, class:"form-control", class:"form-control" %>
  </div>

  <div>
    <%= form.label :ExpireDate, style: "display: block" %>
    <%= form.date_field :ExpireDate, class:"form-control" %>
  </div>

  <div>
    <%= form.label :Type, style: "display: block" %>
    <%= form.select(:Type, options_for_select([[@task_types[1],1],[@task_types[2],2],[@task_types[3],3],[@task_types[4],4],[@task_types[5],5]])) %>
    <!--<%= form.select(:Type, options_for_select(@task_types)) %>-->
  </div>

  <div>
    <%= form.label :Priority, style: "display: block" %>
    <%= form.select(:Priority, options_for_select([[@task_priority[1],1],[@task_priority[2],2],[@task_priority[3],3]])) %>
    <!--<%= form.select(:Priority, options_for_select([["1",1],["2",2],["3",3]])) %>-->
  </div>

  <div>
    <%= form.label :Comments, style: "display: block" %>
    <%= form.text_field :Comments, class:"form-control" %>
  </div>

  <div>
    <%= form.label :ExecutorUID, style: "display: block" %>
    <%=form.select(:ExecutorUID, options_for_select(@member_hash)) %>
    <!--<%= form.select(:ExecutorUID, options_for_select(Member.all.map(&:id))) %>-->
  </div>

  <div>
    <%= form.label :AuthorUID, style: "display: block" %>
    <%= form.select(:AuthorUID, options_for_select(@member_hash)) %>
  </div>

  <div>
    <%= form.label :ProjectID, style: "display: block" %>
    <%= form.select(:ProjectID, options_for_select(@project_hash)) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
